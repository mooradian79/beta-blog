<h1>Articles</h1>

<table>
	<thead>
		<tr>
			<th>Title</th>
			<th>Decription</th>
			<th>Actions</th>
		</tr>
	</thead>

	<tbody>
		<% @articles.each do |article| %>
		<tr>
			<td><%= article.title %></td>
			<td><%= article.description %></td>
			<td><%= article.id %></td>
		</tr>
		<% end %>
	</tbody>
</table>